<%= form_with(model: @farmer, local: true) do |form| %>
  <% if @farmer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@farmer.errors.count, "error") %> prohibited this farmer from being saved:</h2>
      <ul>
        <% @farmer.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Farmer's Name -->
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <!-- Milk Entries Section -->
  <h3>Milk Entries</h3>
  <%= form.fields_for :milk_entries do |milk_form| %>
    <div class="nested-fields">
      <div class="field">
        <%= milk_form.label :quantity %>
        <%= milk_form.number_field :quantity %>
      </div>
      <div class="field">
        <%= milk_form.label :date %>
        <%= milk_form.date_select :date %>
      </div>
      <div class="field">
        <%= milk_form.label :time %>
        <%= milk_form.time_select :time %>
      </div>
      <!-- Option to remove milk entry -->
      <%= milk_form.hidden_field :_destroy %>
      <%= link_to "Remove Milk Entry", '#', class: "remove_fields" %>
    </div>
  <% end %>
  <%= link_to "Add Milk Entry", '#', class: "add_fields", data: { association: "milk_entries" } %>

  <!-- Cows Section -->
  <h3>Cows</h3>
  <%= form.fields_for :cows do |cow_form| %>
    <div class="nested-fields">
      <div class="field">
        <%= cow_form.label :name %>
        <%= cow_form.text_field :name %>
      </div>
      <div class="field">
        <%= cow_form.label :age %>
        <%= cow_form.number_field :age %>
      </div>
      <!-- Option to remove cow -->
      <%= cow_form.hidden_field :_destroy %>
      <%= link_to "Remove Cow", '#', class: "remove_fields" %>
    </div>
  <% end %>
  <%= link_to "Add Cow", '#', class: "add_fields", data: { association: "cows" } %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
